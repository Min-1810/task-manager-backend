{
    "build": {
        "builder": "NIXPACKS",
        "nixpacksConfig": {
            "phases": {
                "install": {
                    "cmds": [
                        "composer install --no-dev --optimize-autoloader"
                    ]
                },
                "start": {
                    "cmd": "php -S 0.0.0.0:8080 -t public"
                }
            }
        }
    }
}
