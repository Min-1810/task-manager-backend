{
    "build": {
        "builder": "NIXPACKS",
        "nixpacksConfig": {
            "phases": {
                "install": {
                    "cmds": [
                        "composer install --no-dev --optimize-autoloader",
                        "php artisan migrate --force"
                    ]
                },
                "start": {
                    "cmd": "php artisan serve --host 0.0.0.0 --port 8000"
                }
            }
        }
    }
}
