{
    "build": {
        "builder": "NIXPACKS",
        "nixpacksConfig": {
            "phases": {
                "install": {
                    "cmds": [
                        "composer install --no-dev --optimize-autoloader"
                    ]
                },
                "start": {
                    "cmd": "php artisan serve --host=0.0.0.0 --port=8080"
                }
            }
        }
    }
}
